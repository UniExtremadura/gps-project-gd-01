<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar"></style>


    <style name="Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorSecondary">
            @android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:background">@color/rojoPrincipal</item>
        <item name="android:textSize">24dp</item>
        <item name="android:fontFamily">@font/alata</item>
    </style>

    <style name="BottomNavigationStyle">

        <item name="itemBackground">@color/grey</item>
        <item name="itemIconTint">@color/rojoPrincipal</item>
        <item name="itemTextColor">@color/black</item>

        <item name="android:textSize">50sp</item>
        <item name="itemIconSize">30sp</item>

    </style>

</resources>